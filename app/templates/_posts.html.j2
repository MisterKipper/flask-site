<ul class="blog-posts">
  {% for post in posts %}
  <li class="post">
    <div class="post-content">
      <h2><a href="{{url_for('.post', id=post.id)}}">{{post.title}}</a></h2>
      <div class="post-author">
        <a href="{{url_for('.user', username=post.author.username)}}">
          {{post.author.username}}
        </a>
      </div>
      <div class="post-date">{{moment(post.timestamp).fromNow()}}</div>
      <div class="post-digest">
        <img class="post-thumbnail" src="{{url_for('static', filename='img/_thumbnail.png')}}">
        <p>{{post.summary}}</p>
      </div>
      <nav class="post-footer">
        <a href="{{url_for('.post', id=post.id)}}" class="label label-default">
          Permalink
        </a>
        <a href="{{url_for('.post', id=post.id)}}#comments" class="label label-primary">
          {{post.comments.count()}} Comments
        </a>
        {% if current_user == post.author %}
        <a href="{{url_for('.edit_post', id=post.id)}}" class="label label-primary">
          Edit
        </a>
        {% elif current_user.is_admin() %}
        <a href="{{url_for('.edit_post', id=post.id)}}" class="label label-danger">
          Edit [Admin]
        </a>
        {% endif %}
      </div>
    </div>
  </li>
  {% endfor %}
</ul>
