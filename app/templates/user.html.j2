{% extends "base.html.j2" %}

{% set title = user.username %}

{% block content %}
<div class="page-header">
  <img class="img-rounded profile-thumbnail" src="{{user.avatar(256)}}">
  <div class="profile-header">
    <h1>{{user.username}}</h1>
    {% if user.name or user.location %}
    <p>
      {% if user.name %}{{user.name}}{% endif %}
      {% if user.location %}
      from <a href="https://maps.google.com/?{{user.location}}">{{user.location}}</a>
      {% endif %}
    </p>
    {% endif %}

    {% if current_user.is_admin() %}
    <p><a href="mailto:{{user.email}}">{{user.email}}</a></p>
    {% endif %}
    {% if user.about_me %}<p>{{user.about_me}}</p>{% endif %}
    <p>
      Member since {{moment(user.member_since).format("L")}}.
      Last seen {{moment(user.last_seen).fromNow()}}.
    </p>
    {%- if user == current_user -%}
    <a class="btn btn-default" href="{{url_for('.edit_profile')}}">Edit Profile</a>
    {%- endif -%}
    {%- if current_user.is_admin() -%}
    <a class="btn btn-danger" href="{{url_for('.edit_profile_admin', id=user.id)}}">
      Edit Profile [Admin]
    </a>
    {%- endif -%}
  </div>
</div>
<div class="page-content">
  <h3>Posts by {{user.username}}</h3>
  {% include "_posts.html.j2" %}
</div>
{% endblock %}
{% block scripts %}
<script src="{{url_for('static', filename='js/moment-with-locales.min.js')}}"></script>
<script src="{{url_for('static', filename='js/render-moment.js')}}"></script>
{% endblock %}
